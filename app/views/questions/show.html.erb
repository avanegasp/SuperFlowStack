<div class="container show">
  <div class="btn-all">
    <div class="btn-edit">
      <%=link_to "Edit Question", edit_question_path(@question.id)%>
    </div>
    <div class="btn-question">
      <%=link_to "Ask Question" , new_question_path%>
    </div>
  </div>
  <div class = "question">
    <h1><%=@question.title%></h1>
    <h5><%= @question.user.email %></h5>
    <h5><%= @question.created_at %></h5>
    <h2 class="description"><%= (@question.description)%></h2>
  </div>

  <% if (@errors_comment_que) %>
      <% @errors_comment_que.each do |error| %>
        <ul class= "errors">
          <li><%= error %></li>
        </ul>
      <% end %>
    <% end %>

  <div class="votes">
    <%= form_for [@question, @question.votes.new] do |f| %>
    <%= f.hidden_field  :type, value: "sum"%>
    <%= f.submit "Vote +" %>
    <% end %>
  </div>

  <p>Votes = <%=  @question.votes.count%></p>

  <div class="votes">
    <%= form_for [@question, @question.votes.new] do |f| %>
    <%= f.hidden_field  :type, value: "rest" %>
    <%= f.submit "Vote -" %>
    <% end %>
  </div>

  <p> Total comments: <%=  @question.comments.count%></p>
  <%@question.comments.each do |comment|%>
    <div class= "comments">
      <p><%=comment.description%></p>
      <p><%=comment.user.email%></p>
      <p><%=comment.created_at%></p>
    </div>

  <%end%>

  <% if user_signed_in? %>
  <div>
    <div class="form-row ">
    <%= form_for [@question, @question.comments.new] do |f| %>
      <div class="col">
        <%= f.label :"Give us a comment" %><br />
        <%= f.text_area :description, class:"form-control", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Send Comment Question" %>
      </div>
    <% end %>
      </div>
       <% end %>
    </div>

  <div class="answer">
    <% if (@errors_comment_ans) %>
      <% @errors_comment_ans.each do |error| %>
        <ul class= "errors">
          <li><%= error %></li>
        </ul>
      <% end %>
    <% end %>


    <%@question.answers.each do |answer|%>
      <div class="answer_2">
        <h1><%=answer.description%></h1>
      <div class="inline">
        <p><%=answer.user.email%></p>
        <p><%=answer.created_at%></p>
      </div>
      </div>

      <div class="btn-votes">
        <div class= "votes">
          <%= form_for [answer, answer.votes.new] do |f| %>
          <%= f.hidden_field  :type, value: "sum"%>
          <%= f.submit "Vote +" %>
          <% end %>
        </div>

        <p>Votes = <%=  answer.votes.count%></p>

        <div class= "votes">
          <%= form_for [answer, answer.votes.new] do |f| %>
          <%= f.hidden_field  :type, value: "rest" %>
          <%= f.submit "Vote -" %>
          <% end %>
        </div>
      </div>

      <%answer.comments.each do |comment|%>
      <div class = "comments">
        <p><%=comment.description%></p>
        <div class="inline">
          <p><%= comment.user.email %></p>
          <p><%= comment.created_at %></p>
        </div>
      </div>
      <%end%>

      <% if user_signed_in? %>
          <div>
            <div class="form-row ">
              <%= form_for [answer, answer.comments.new] do |f| %>
                <div class="col">
                  <%= f.label :"Post your comment" %><br />
                  <%= f.text_area :description, class:"form-control", autocomplete: "off" %>
                </div>

                <div class="actions">
                  <%= f.submit "Send Comment Answer" %>
                </div>
              <% end %>
              </div>
            </div>
        <%end%>
    <%end%>
  </div>

  <% if @errors_answer %>
    <% @errors_answer.each do |error| %>
     <ul class= "errors">
       <li><%= error %></li>
     </ul>
    <% end %>
  <% end %>
  <% if user_signed_in? %>
  <div>
    <div class="form-row ">
    <%= form_for [@question, @question.answers.new] do |f| %>
      <div class="col">
        <%= f.label :"Post your answer" %><br />
        <%= f.text_area :description, class:"form-control", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Send Answer" %>
      </div>
    <% end %>
      </div>
      <% end %>
    </div>

  <%if current_user == @question.user%>
    <%=link_to "Delete Question" , question_path(@question.id), method:"delete"%>
  <%end%>
</div>
